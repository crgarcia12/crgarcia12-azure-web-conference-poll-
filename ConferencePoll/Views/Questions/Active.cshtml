@model ConferencePoll.Models.Question

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Answer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionTextHtml" class="control-label"></label>
                <span asp-validation-for="QuestionTextHtml" class="text-danger"></span>
                @{
                    string[] answers = @Model.QuestionAnswers.Split(',');
                    foreach(var a in answers)
                    {
                        <p>@a</p>
                    }   
                    
                }
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAllowedToAnswer" /> @Html.DisplayNameFor(model => model.IsAllowedToAnswer)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
